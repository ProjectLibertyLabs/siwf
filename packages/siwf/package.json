{
  "name": "@projectlibertylabs/siwf",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "Apache-2.0",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build && node scripts/package.cjs",
    "test": "vitest run --silent",
    "test:unit": "vitest run --silent",
    "test:unit:loud": "vitest run",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "format": "prettier --write .",
    "pack": "cd dist && npm pack"
  },
  "devDependencies": {
    "@projectlibertylabs/eslint-config-siwf": "workspace:*",
    "@polkadot/rpc-provider": "^13.2.1",
    "@vitest/coverage-v8": "^2.1.2",
    "jsdom": "^25.0.1",
    "pathe": "^1.1.2",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.3",
    "vitest": "^2.1.2"
  },
  "dependencies": {
    "@frequency-chain/api-augment": "^1.13.2",
    "@polkadot/api": "^13.2.1",
    "@polkadot/extension-dapp": "^0.53.1",
    "@polkadot/extension-inject": "^0.53.1",
    "@polkadot/types": "^13.2.1",
    "@polkadot/util": "^13.1.1",
    "@polkadot/util-crypto": "^13.1.1",
    "@talismn/siws": "^0.0.19"
  }
}
